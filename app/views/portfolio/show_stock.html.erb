<p class="mt-2">
  <%= link_to "Back", portfolio_display_path, class: "text-white border rounded-xl px-2 ml-4" %>
</p>

<section class="text-white border-2 rounded-xl w-1/3 ml-auto mr-auto mt-10">
  <div class="flex flex-col items-center mt-4">
    <p><%= @stock.company_name%> - <span> <%= @stock.symbol %> </span></p>
    <p>Price: <%= @stock.latest_price %> </p>
    <p>Balance: <%= number_with_precision(@balance, precision: 2) %> </p>
    <p>Shares: <%= @stock.quantity %> </p>
  </div>

  <div class="flex justify-evenly my-8">
    <div>
      <%= form_with model: [@stock, @order] do |f| %>
        <%= f.hidden_field :order_type, value: "buy" %>

        <div>
          <%= f.number_field :quantity, step: :any, class: "text-black text-center" %>
        </div>

        <div class="text-center mt-4">
          <%= f.submit "Buy", class: "text-blue-700 border border-blue-700 rounded-xl px-2" %>
        </div>
      <% end %>
    </div>
    <br/>
    <div>
      <%= form_with model: [@stock, @order] do |f| %>
        <%= f.hidden_field :order_type, value:"sell"  %>

        <div>
          <%= f.number_field :quantity, step: :any, class: "text-black text-center" %>
        </div>

        <div class="text-center mt-4">
          <%= f.submit "Sell", class: "text-red-600 border border-red-600 rounded-xl px-2" %>
        </div>
      <% end %>
    </div>
  </div>

</section>
