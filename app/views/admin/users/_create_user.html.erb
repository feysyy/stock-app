<%= form_with model: [:admin, @user] do |form| %>
  <div>
    <%= form.label :email %>
    <br>
    <%= form.email_field :email %>
  </div>

  <div>
    <%= form.label :password %>
    <br>
    <%= form.password_field :password %>
  </div>

  <div>
    <%= form.label :password_confirmation %>
    <br>
    <%= form.password_field :password_confirmation %>
  </div>

  <div>
    <%= form.label :balance %> 
    <br>
    <%= form.number_field :balance %>
  </div>
  
  <div>
    <%= form.label :role %>
    <br>
    <%= form.text_field :role %>
  </div>
 
  <div>
    <%= form.label :approved %>
    <br>
    <%= form.check_box :approved %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>